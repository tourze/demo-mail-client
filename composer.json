{
  "name": "tourze/mail-client",
  "description": "异步邮件发送服务的客户端",
  "authors": [
    {
      "name": "tourze",
      "email": "dev@tourze.com"
    }
  ],
  "minimum-stability": "stable",
  "require": {
    "tourze/base": "^1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^4.7"
  },
  "autoload": {
    "psr-4": {
      "tourze\\MailClient\\": "src/"
    },
    "files": [
      "bootstrap.php"
    ]
